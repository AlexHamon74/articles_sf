{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<form method="post">
		<div class="container">

			<h1 class="my-5">Please sign in</h1>
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			<label for="username">Email</label>
			<input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autofocus>
			<label class="mt-3" for="password">Password</label>
			<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password">

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
			            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
			            See https://symfony.com/doc/current/security/remember_me.html
			
			            <div class="checkbox mb-3">
			                <input type="checkbox" name="_remember_me" id="_remember_me">
			                <label for="_remember_me">Remember me</label>
			            </div>
			        #}
			<a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a>
			<button class="btn btn-primary mt-3" type="submit">
				Valider
			</button>
		</div>
	</form>
{% endblock %}

